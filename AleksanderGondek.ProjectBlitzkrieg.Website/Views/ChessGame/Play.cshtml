@model dynamic

@{
    ViewBag.Title = "Play Chess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row marketing" ng-app="blitzkrieg" ng-controller="chessGameCtrl">
    <div class="row text-center">
        <nywton-chessboard board="boardA" data-draggable="true"></nywton-chessboard>
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-12">
            <div class="well bs-component">
                <form class="form-horizontal">
                    <fieldset>
                        <legend>Game Settings</legend>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Parallelization</label>
                            <div class="col-lg-8">
                                <select class="form-control" ng-model="gameTickRequest.ExectutionType" ng-options="type for type in executionTypesAvailable"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Workers</label>
                            <div class="col-lg-8">
                                <input type="number" class="form-control" placeholder="0" ng-model="gameTickRequest.Workers">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">MaximumIterations</label>
                            <div class="col-lg-8">
                                <input type="number" class="form-control" placeholder="0" ng-model="gameTickRequest.MaximumIterations">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">MaxiumumSimulations</label>
                            <div class="col-lg-8">
                                <input type="number" class="form-control" placeholder="0" ng-model="gameTickRequest.MaxiumumSimulations">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-8 col-lg-offset-4">
                                <button class="btn btn-primary" ng-click="startGame()">
                                    {{gameInterval === null ? 'Start' : 'Stop'}}
                                </button>
                                <button class="btn" ng-class="{'btn-default': apiCallUnderway, 'btn-primary': !apiCallUnderway}" ng-click="gameTick()" ng-disabled="apiCallUnderway">
                                    Tick
                                </button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div>
            </div>
        </div>
    </div>

</div>

